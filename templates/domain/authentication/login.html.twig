{% extends 'domain/authentication/layout/base.html.twig' %}
{% block title 'authentication.titles.login' | trans([], 'authentication') %}

{% block body %}
    <div class="nk-block-head">
        <div class="nk-block-head-content">
            <h5 class="nk-block-title fw-bolder">{{ 'authentication.pages.login.title' | trans([], 'authentication') }}</h5>
            <div class="nk-block-des"><p>{{ 'authentication.pages.login.description' | trans([], 'authentication') }}</p></div>
        </div>
    </div>
    {{ form_start(form) }}
        {{ form_row(form.identifier) }}
        <div class="form-group">
            <div class="form-label-group">
                {{ form_label(form.password) }}
                <a class="link link-primary link-sm" tabindex="-1" href="{{ path('authentication_reset_password_request') }}">
                    Mot de passe oubli√© ?
                </a>
            </div>
            {{ form_widget(form.password)}}
        </div>
    <button class="btn btn-lg btn-primary btn-block">{{ 'global.submit' | trans([], 'messages') }}</button>
    {{ form_end(form) }}
{% endblock %}
