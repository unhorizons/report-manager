{% extends 'domain/authentication/layout/base.html.twig' %}
{% block title 'authentication.titles.login_link' | trans([], 'authentication') %}

{% block body %}
    <div class="nk-block-head">
        <div class="nk-block-head-content">
            <h5 class="nk-block-title fw-bolder">{{ 'authentication.pages.login_link.title' | trans([], 'authentication') }}</h5>
            <div class="nk-block-des"><p>{{ 'authentication.pages.login_link.description' | trans([], 'authentication') }}</p></div>
        </div>
    </div>
    {{ form_start(form) }}
    {{form_rest(form)}}
    <button class="btn btn-lg btn-primary btn-block">{{ 'global.submit' | trans([], 'messages') }}</button>
    {{ form_end(form) }}
{% endblock %}
