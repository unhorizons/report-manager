{% extends 'domain/report/layout/base.html.twig' %}
{% block title 'Authentification à facteur double' %}

{% block header %}
    {% embed "shared/component/_header.html.twig" %}
        {% block header_title "Authentification à facteur double" %}
        {% block header_action_list %}
            <li>
                <a href="{{ path('authentication_settings_index') }}" class="btn btn-white btn-dim btn-outline-light" aria-label="{{ 'global.back' | trans([], 'messages') }}" title="{{ 'global.back' | trans([], 'messages') }}">
                    {{ 'arrow-long-left' | icon }}
                    <span>{{ 'global.back' | trans([], 'messages') }}</span>
                </a>
            </li>
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-aside-wrap">
            <div class="card-inner card-inner-lg">
                <div class="nk-block-head nk-block-head-lg">
                    <div class="nk-block-between">
                        <div class="nk-block-head-content">
                            <h4 class="nk-block-title">Paramètres de securités</h4>
                            <div class="nk-block-des">
                                <p>Ces paramètres vous aident à assurer la sécurité de votre compte.</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="nk-block">
                    <div class="card">
                        <div class="card-inner-group">
                            {{ form_start(form) }}
                                <div class="card-inner">
                                    <div class="between-center flex-wrap g-3">
                                        <div class="nk-block-text"> {{ form_row(form.email) }}</div>
                                    </div>
                                </div>
                                <div class="card-inner">
                                    <div class="flex-column">
                                        <div class="between-center flex-wrap flex-md-nowrap g-3">
                                            <div class="nk-block-text">
                                                <p>
                                                    Si vous souhaitez vous utiliser <strong>Google Authenticator</strong>, <br>
                                                    activez l'option et scannez ce qrcode depuis votre mobile.
                                                </p>
                                                {{ form_row(form.google) }}
                                                <img src="{{ qr_code_data_uri(qrcode_content) }}" alt="google authenticator qrcode">
                                            </div>
                                        </div>
                                        <button class="btn btn-primary mt-4">
                                            {{ 'save-fill' | icon }}
                                            <span>{{ 'global.submit' | trans([], 'messages') }}</span>
                                        </button>
                                    </div>
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-aside card-aside-left user-aside toggle-slide toggle-slide-left toggle-break-lg toggle-screen-lg"
                 data-toggle-body="true" data-content="userAside" data-toggle-screen="lg" data-toggle-overlay="true">
                <div class="card-inner-group">
                    <div class="card-inner">
                        <div class="user-card">
                            <div class="user-avatar bg-primary"><span>AB</span></div>
                            <div class="user-info">
                                <span class="lead-text">Abu Bin Ishtiyak</span>
                                <span class="sub-text">info@softnio.com</span>
                            </div>
                        </div>
                    </div>
                    <div class="card-inner p-0">
                        <ul class="link-list-menu">
                            <li>
                                <a href="{{ path('authentication_settings_index') }}">
                                    <em class="icon ni ni-lock-alt-fill"></em>
                                    <span>Paramètres de securités</span>
                                </a>
                            </li>
                            <li>
                                <a href="">
                                    <em class="icon ni ni-user-fill-c"></em>
                                    <span>Informations personnelles</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
