{% extends 'domain/report/layout/base.html.twig' %}
{% block title 'Rechercher un rapport' %}

{% block header %}
    {% embed "shared/component/_header.html.twig" %}
        {% block header_title  'Rechercher un rapport' | title %}
        {% block header_action_list %}
            <li>
                <a href="{{ path('report_manager_report_index') }}" class="btn btn-white btn-dim btn-outline-light" aria-label="{{ 'global.back' | trans([], 'messages') }}" title="{{ 'global.back' | trans([], 'messages') }}">
                    {{ 'folder-list' | icon }}
                    <span>Tous les rapports</span>
                </a>
            </li>
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block content %}
    {% embed 'shared/component/card/_simple.html.twig' %}
        {% block simple_card_body %}
            {{ form_start(form) }}
                {{ form_row(form.query) }}
                {{ form_row(form.use_period) }}
                <fieldset class="row mb-4">
                    <div class="col-6">{{ form_row(form.period.starting_at) }}</div>
                    <div class="col-6">{{ form_row(form.period.ending_at) }}</div>
                </fieldset>
                {{ form_row(form.seen) }}
                {{ form_row(form.unseen) }}
            <button class="btn btn-primary">
                {{ 'save-fill' | icon }}
                <span>{{ 'global.submit' | trans([], 'messages') }}</span>
            </button>
            {{ form_end(form) }}
        {% endblock %}
    {% endembed %}
{% endblock %}



