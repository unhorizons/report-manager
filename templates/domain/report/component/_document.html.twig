<div class="nk-file-item nk-file shadow">
    <div class="nk-file-info">
        <div class="nk-file-title">
            <div class="nk-file-icon">
                <a class="nk-file-icon-link" href="{{ vich_uploader_asset(data, 'file') }}">
                    <span class="nk-file-icon-type">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 72 72">
                            <path d="M49,61H23a5.0147,5.0147,0,0,1-5-5V16a5.0147,5.0147,0,0,1,5-5H40.9091L54,22.1111V56A5.0147,5.0147,0,0,1,49,61Z" style="fill:#e3edfc"></path>
                            <path d="M54,22.1111H44.1818a3.3034,3.3034,0,0,1-3.2727-3.3333V11s1.8409.2083,6.9545,4.5833C52.8409,20.0972,54,22.1111,54,22.1111Z" style="fill:#b7d0ea"></path>
                            <path d="M19.03,59A4.9835,4.9835,0,0,0,23,61H49a4.9835,4.9835,0,0,0,3.97-2Z" style="fill:#c4dbf2"></path>
                            <path d="M27.2223,43H44.7086s2.325-.2815.7357-1.897l-5.6034-5.4985s-1.5115-1.7913-3.3357.7933L33.56,40.4707a.6887.6887,0,0,1-1.0186.0486l-1.9-1.6393s-1.3291-1.5866-2.4758,0c-.6561.9079-2.0261,2.8489-2.0261,2.8489S25.4268,43,27.2223,43Z" style="fill:#755de0"></path>
                        </svg>
                    </span>
                </a>
            </div>
            <div class="nk-file-name">
                <div class="nk-file-name-text">
                    <a href="{{ vich_uploader_asset(data, 'file') }}" class="title">
                        Document #{{ data.id }}
                    </a>
                </div>
            </div>
        </div>
        <ul class="nk-file-desc">
            <li class="date">{{ data.updatedAt ? data.updatedAt | date('d, M') : data.createdAt | date('d, M') }}</li>
            <li class="size">{{ data.readableSize }}</li>
        </ul>
    </div>

    {% if is_granted('DOCUMENT_DELETE', data) and report.mutable %}
        <div class="nk-file-actions">
            <form action="{{ path('report_document_delete', {uuid: data.uuid}) }}" method="post" class="d-inline-block">
                <input type="hidden" name="_method" value="DELETE">
                <input type="hidden" name="_token" value="{{ csrf_token('delete_' ~ data.id) }}">
                <button class="btn btn-sm btn-icon btn-trigger" title="{{ 'global.delete' | trans([], 'messages') }}" aria-label="{{ 'global.delete' | trans([], 'messages') }}">
                    {{ 'trash-empty-fill' | icon }}
                </button>
            </form>
        </div>
    {% endif %}
</div>
