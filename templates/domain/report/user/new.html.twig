{% extends 'shared/layout/base.html.twig' %}
{% block title "Ajouter un rapport" | title %}

{% block header %}
    {% embed "shared/component/_header.html.twig" %}
        {% block header_title "Ajouter un rapport" | title %}
        {% block header_action_list %}
            <li>
                <a href="{{ path('report_employee_report_index') }}" class="btn btn-white btn-dim btn-outline-light" aria-label="{{ 'global.back' | trans }}" title="{{ 'global.back' | trans }}">
                    {{ 'arrow-long-left' | icon }}
                    <span>{{ 'global.back' | trans }}</span>
                </a>
            </li>
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block content %}
    {% embed "shared/component/card/_simple.html.twig" %}
        {% block simple_card_body %}
            {% include 'shared/component/_form.html.twig' %}
        {% endblock %}
    {% endembed %}
{% endblock %}
